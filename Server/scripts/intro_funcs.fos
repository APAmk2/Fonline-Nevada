#include "_macros.fos"

 void _Init(Item& item, bool firstTime)
{
    item.SetEvent( ITEM_EVENT_USE_ON_ME, "_Remove");

}

bool _RemoveRock(Item& item, Critter& crit, Item@ usedItem ){
	if( usedItem.GetProtoId() == PID_SIGN_ITEM )
    {
        DeleteItem( item );
        return true;
    }
    return false;
}

